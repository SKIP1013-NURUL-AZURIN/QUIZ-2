package labTest2;
import java.util.Scanner;
public class Quiz1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		 Scanner sc = new Scanner (System.in);
		    int NoclssHeld;
		    int NoClssAttend;
		    int attPercentage;


		      System.out.println ("Enter number of classes held : ");
		      NoclssHeld = sc.nextInt ();

		      System.out.println ("Enter number of classes attended : ");
		      NoClssAttend = sc.nextInt ();
		      
		      attPercentage = (( NoClssAttend*100)/ NoclssHeld);

		      System.out.println ("Percentage of class attended : " + attPercentage +
					  "%");

		    if (attPercentage >= 75)
		      {
			System.out.println ("You are allowed to sit in exam.");
		      }
		    else
		      {
			System.out.println ("You are not allowed to sit in exam.");
		      }


	}

}
